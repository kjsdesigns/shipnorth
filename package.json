{
  "name": "shipnorth",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "infrastructure"
  ],
  "scripts": {
    "dev": "./scripts/smart-docker-startup.sh",
    "dev:logs": "docker-compose logs -f",
    "dev:stop": "docker-compose down",
    "dev:health": "./scripts/docker-health-monitor.sh",
    "dev:monitor": "./scripts/docker-health-monitor.sh --monitor",
    "dev:diagnose": "./scripts/frontend-api-diagnostics.sh",
    "docker:dev": "./scripts/docker-startup.sh",
    "api:dev": "cd apps/api && npm run dev",
    "web:dev": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:infrastructure && npm run test:scoreboard",
    "test:infrastructure": "npx playwright test --project=infrastructure",
    "test:config-enforcement": "npx playwright test tests/e2e/config-enforcement.spec.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:smoke": "playwright test --grep @smoke",
    "test:core": "playwright test --project=desktop-core",
    "test:mobile": "playwright test --project=mobile-core",
    "test:api": "playwright test api-integration.spec.ts",
    "test:scoreboard": "node tests/run-with-scoreboard.js --config=playwright-optimized.config.ts",
    "test:critical": "echo '⚠️  WARNING: Running critical tests locally. For full isolation, use: npm run test:docker:critical' && node tests/run-with-scoreboard.js --config=playwright-optimized.config.ts --project=critical-path",
    "test:full": "echo '⚠️  WARNING: Running full tests locally. For full isolation, use: npm run test:docker:full' && npm run dev:diagnose && node tests/run-with-scoreboard.js --config=playwright-optimized.config.ts --timeout=300000",
    "test:docker": "docker-compose --profile testing run --rm test-runner ./tests/docker-test-wrapper.sh npx playwright test -c playwright-docker-only.config.ts",
    "test:docker:critical": "docker-compose --profile testing run --rm test-runner ./tests/docker-test-wrapper.sh npx playwright test -c playwright-docker-only.config.ts --project=docker-core",
    "test:docker:full": "docker-compose --profile testing run --rm test-runner ./tests/docker-test-wrapper.sh npx playwright test -c playwright-docker-only.config.ts",
    "test:docker:build": "docker-compose --profile testing build test-runner",
    "test:analyze": "node tests/utils/test-stability-analyzer.js --analyze --optimize",
    "test:auth": "playwright test auth.spec.ts",
    "test:staff": "playwright test staff-interface.spec.ts",
    "test:customer": "playwright test customer-portal.spec.ts",
    "test:driver": "playwright test driver-mobile.spec.ts",
    "servers:start": "docker-compose up -d",
    "servers:stop": "docker-compose down",
    "servers:restart": "docker-compose restart", 
    "servers:status": "docker-compose ps",
    "servers:logs": "docker-compose logs",
    "test:admin": "playwright test admin-panel.spec.ts",
    "test:docs": "playwright test documentation.spec.ts",
    "test:ui": "playwright test ui-ux.spec.ts",
    "test:workflows": "playwright test end-to-end.spec.ts",
    "test:local": "TEST_ENV=local playwright test",
    "test:dev": "TEST_ENV=dev playwright test",
    "test:staging": "TEST_ENV=staging playwright test",
    "test:chrome": "playwright test --project=desktop-core",
    "test:safari": "playwright test --project=safari-desktop",
    "test:mobile-safari": "playwright test --project=safari-mobile",
    "test:tablet": "playwright test --project=tablet",
    "test:accessibility": "playwright test --grep @accessibility",
    "test:performance": "playwright test --grep @performance",
    "test:mobile-responsive": "playwright test --grep @mobile",
    "test:parallel": "playwright test --workers=6",
    "test:serial": "playwright test --workers=1",
    "test:retry": "playwright test --retries=3",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:clean": "rm -rf test-results && mkdir test-results",
    "test:setup": "npm run test:clean && npm run test:install",
    "seed": "cd apps/api && npm run seed",
    "deploy": "cd infrastructure && npm run deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.2",
    "@commitlint/config-conventional": "^19.7.2",
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "http-proxy": "^1.18.1",
    "lint-staged": "^15.3.1",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "puppeteer-core": "^24.17.0"
  }
}
