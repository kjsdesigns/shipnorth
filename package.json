{
  "name": "shipnorth",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "infrastructure"
  ],
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:detach": "docker-compose up --build -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f",
    "logs:app": "docker-compose logs -f shipnorth",
    "logs:db": "docker-compose logs -f postgres",
    "health:check": "node scripts/service-health-check.js",
    "test": "node scripts/service-health-check.js && node full-test-suite.js",
    "test:full": "node scripts/service-health-check.js && node full-test-suite.js",
    "test:suite": "node scripts/service-health-check.js && node full-test-suite.js",
    "test:watch": "node test-suite.js --watch",
    "test:debug": "playwright test --debug --headed",
    "test:e2e": "playwright test",
    "test:critical": "playwright test --grep @critical",
    "test:optimized": "playwright test tests/e2e/optimized-test-suite.spec.ts",
    "test:integration": "cd apps/api && npm run test:integration",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd apps/api && npm run test:coverage",
    "test:coverage:frontend": "cd apps/web && npm run test:coverage || npm run test",
    "test:unit": "npm run test:unit:backend && npm run test:unit:frontend",
    "test:unit:backend": "cd apps/api && npm test",
    "test:unit:frontend": "cd apps/web && npm test",
    "typecheck": "npm run typecheck:backend && npm run typecheck:frontend",
    "typecheck:backend": "cd apps/api && npm run typecheck",
    "typecheck:frontend": "cd apps/web && npm run typecheck",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "validate": "npm run typecheck && npm run test:full",
    "seed": "cd apps/api && npm run seed",
    "deploy": "cd infrastructure && npm run deploy",
    "auth:health": "node agents/auth-health-monitor.js --report",
    "auth:debug": "node agents/auth-debug-tools.js --report",
    "auth:monitor": "node agents/auth-health-monitor.js --monitor",
    "auth:test-flow": "node agents/auth-debug-tools.js --login-flow"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.2",
    "@commitlint/config-conventional": "^19.7.2",
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "chalk": "^5.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "http-proxy": "^1.18.1",
    "lint-staged": "^15.3.1",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "puppeteer-core": "^24.17.0"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@casl/react": "^5.0.0"
  }
}
