# Database
AWS_REGION=ca-central-1
DYNAMODB_TABLE_NAME=shipnorth-main
DYNAMODB_ENDPOINT=

# JWT
JWT_SECRET=change-this-secret-in-production-use-long-random-string
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=30d

# API
PORT=4000
NODE_ENV=development

# PayPal (Get from https://developer.paypal.com)
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-secret-here
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_WEBHOOK_ID=

# ShipStation (Get from ShipStation account)
SHIPSTATION_API_KEY=your-shipstation-api-key
SHIPSTATION_API_SECRET=your-shipstation-secret

# AWS Notification Services
# Note: Uses IAM role credentials, no keys needed here
SES_FROM_EMAIL=noreply@yourdomain.com
SNS_DEFAULT_SENDER_ID=SHIPNORTH

# Application URLs
APP_URL=http://localhost:3001
API_URL=http://localhost:4000